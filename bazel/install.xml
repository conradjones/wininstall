<?xml version="1.0" encoding="UTF-8"?>
<package>
    <parameters>
        <VERSION>1.1.0</VERSION>
    </parameters>
    <detect>
        <file>
            <path>c:\bin\bazel.exe</path>
        </file>
    </detect>
    <steps>
        <download>https://github.com/bazelbuild/bazel/releases/download/${VERSION}/bazel-${VERSION}-windows-x86_64.exe</download>
        <create_dir>c:\bin</create_dir>
        <copy_file>
            <source>bazel-${VERSION}-windows-x86_64.exe</source>
            <dest>c:\bin\bazel.exe</dest>
        </copy_file>
        <path>c:\bin</path>
    </steps>
</package>