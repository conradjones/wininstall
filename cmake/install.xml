<?xml version="1.0" encoding="UTF-8"?>
<package>
    <detect>
        <file>
            <path>C:\bin\cmake\bin\cmake.exe</path>
            <version>3.16.0.0</version>
        </file>
    </detect>
    <steps>
        <download>https://github.com/Kitware/CMake/releases/download/v3.16.0/cmake-3.16.0-win64-x64.msi</download>
        <command>
            <commandline>msiexec.exe</commandline>
            <args>
                <arg>/I</arg>
                <arg>cmake-3.16.0-win64-x64.msi</arg>
                <arg>/qn</arg>
                <arg>/norestart</arg>
                <arg>/L*V</arg>
                <arg>C:\.winstall\install\cmake\cmake-msi.log</arg>
                <arg>REBOOT=R</arg>
                <arg>TARGETDIR=C:\bin\cmake</arg>
                <arg>INSTALL_ROOT=C:\bin\cmake</arg>
            </args>
        </command>
        <path>C:\bin\cmake\bin</path>
    </steps>
</package>




