<?xml version="1.0" encoding="UTF-8"?>
<package>
    <detect>
        <file>
            <path>C:\bin\conan\conan\conan.exe</path>
            <version>2.2.2.0</version>
        </file>
    </detect>
    <steps>
        <download>https://github.com/conan-io/conan/releases/download/2.2.2/conan-2.2.2-windows-x86_64-installer.exe</download>
        <command>
            <commandline>conan-2.2.2-windows-x86_64-installer.exe</commandline>
            <args>
                <arg>/DIR=C:\bin\conan</arg>
                <arg>/VERYSILENT</arg>
                <arg>/NORESTART</arg>
                <arg>/NOCANCEL</arg>
                <arg>/SP-</arg>
                <arg>/CLOSEAPPLICATIONS</arg>
                <arg>/RESTARTAPPLICATIONS</arg>
            </args>
        </command>
        <path>C:\bin\conan\conan</path>
    </steps>
</package>