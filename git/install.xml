<?xml version="1.0" encoding="UTF-8"?>
<package>
    <detect>
        <file>
            <path>C:\Program Files\git\bin\git.exe</path>
            <version>2.24.0.2</version>
        </file>
    </detect>
    <steps>
        <download>https://github.com/git-for-windows/git/releases/download/v2.24.0.windows.2/Git-2.24.0.2-64-bit.exe</download>
        <command>
            <commandline>Git-2.24.0.2-64-bit.exe</commandline>
            <args>
                <arg>/LOG=GitInstaller.log</arg>
                <arg>/VERYSILENT</arg>
                <arg>/NORESTART</arg>
                <arg>/NOCANCEL</arg>
                <arg>/SP-</arg>
                <arg>/CLOSEAPPLICATIONS</arg>
                <arg>/RESTARTAPPLICATIONS</arg>
                <arg>/COMPONENTS="icons,ext\reg\shellhere"</arg>
            </args>
        </command>
        <path>C:\Program Files\git\bin</path>
    </steps>
</package>