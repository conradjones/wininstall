<?xml version="1.0" encoding="UTF-8"?>
<package>
    <detect>
        <file>
            <path>C:\bin\llvm\bin\clang-cl.exe</path>
        </file>
    </detect>
    <steps>
        <download>https://github.com/llvm/llvm-project/releases/download/llvmorg-17.0.6/LLVM-17.0.6-win64.exe</download>
        <command>
            <commandline>LLVM-17.0.6-win64.exe</commandline>
            <args>
                <arg>/S</arg>
                <arg>/D=C:\bin\llvm</arg>
            </args>
        </command>
        <path>C:\bin\llvm\bin</path>
    </steps>
</package>